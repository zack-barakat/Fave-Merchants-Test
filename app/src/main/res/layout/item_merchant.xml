<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/common_ui_padding_extra_small"
    android:layout_marginEnd="@dimen/common_ui_padding_extra_small"
    android:layout_marginBottom="@dimen/common_ui_padding_extra_small"
    app:cardCornerRadius="4dp"
    app:cardElevation="4dp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:padding="@dimen/common_ui_padding"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvMerchantName"
            style="@style/TextAppearance.AppCompat.Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:layout_marginBottom="@dimen/common_ui_padding_small"
            android:textColor="@color/primaryTextLight"
            tools:text="OldTown"/>

        <TextView
            android:id="@+id/tvMerchantEmail"
            style="@style/TextAppearance.AppCompat.Body1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/primaryTextLight"
            android:layout_marginBottom="@dimen/common_ui_padding_small"
            android:autoLink="web|email"
            tools:text="test@gamil.com"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginBottom="@dimen/common_ui_padding_small"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvMerchantLocation"
                style="@style/TextAppearance.AppCompat.Body1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/primaryTextLight"
                tools:text="Kuala Lumpur"/>

            <TextView
                android:id="@+id/tvMerchantWebsite"
                style="@style/TextAppearance.AppCompat.Body1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="@color/colorPrimary"
                android:text="@string/text_partner_website"/>
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>